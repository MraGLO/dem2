<Page x:Class="dem2.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:dem2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <TextBlock>Name</TextBlock>
                <TextBox Name="name" Width="100" Height="20"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Login</TextBlock>
                <TextBox Name="login" Width="100" Height="20"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock>Password</TextBlock>
                <PasswordBox Name="password" Width="100" Height="20"></PasswordBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="ButtonRegin" Click="ButtonRegin_Click">Registrotion</Button>
                <Button Name="ButtonBack" Click="ButtonBack_Click">Back</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
